File f_feats_train = read_csv("@SHOGUN_DATA@/classifier_4class_2d_linear_features_train.dat")

#![create_features]
Features features_train = create_features(f_feats_train)
#![create_features]

#![create_gmm_instance]
int num_components = 3
GMM gmm(num_components)
gmm.put("seed", 100)
#![create_gmm_instance]

#![add_observer]
ParameterObserver obs = create_parameter_observer("ParameterObserverLogger")
gmm.subscribe(obs)
#![add_observer]

#![train_sample]
gmm.put("features", features_train)
gmm.train_em()
RealVector output = gmm.sample()
#![train_sample]

#![training_smem]
gmm.unsubscribe(obs)
ParameterObserver obs_smem = create_parameter_observer("ParameterObserverLogger")
gmm.subscribe(obs_smem)
gmm.train_smem()
#![training_smem]

#![extract_coeff]
int num_observations = obs.get_int("num_observations")
ObservedValue obs_val = obs.get_observation(num_observations-2)
RealVector observed_coeff =  obs_val.get_real_vector("coefficients")
RealVector coeff = gmm.get_real_vector("coefficients")
#![extract_coeff]

#![extract_likelihood]
ObservedValue obs_val_2 = obs.get_observation(num_observations-3)
real log_likelihood = obs_val_2.get_real("log_likelihood")
#![extract_likelihood]
